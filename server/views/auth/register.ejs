<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!-- Login Form -->
<main class="container">
          <div class="offset-md-4 col-md-4 text-center">
              <!-- Message Area -->
            <% if (message.length > 0) { %>
              <div class="alert alert-danger">
                  <%= message %>
              </div>
              <% } %>
          </div>
          <br>

        <form method="POST" autocomplete="off">
          <div class="box">
            <div>
              <span class="text-center">Please Register</span>
            </div>
              <div class="input-container" style="margin-top: 50px;">
                <input type="text" required autocomplete="off"/>
                <label for="username">username</label>		
              </div>

              <div class="input-container">		
                <input type="password" required autocomplete="off"/>
                <label for="password">password</label>
              </div>

              <div class="input-container">		
                <input type="email" required autocomplete="off" pattern=".*@.*"/>
                <label for="email">email</label>
              </div>

              <div class="input-container">		
                <input type="firstName" required autocomplete="off"/>
                <label for="firstName">first name</label>
              </div>

              <div class="input-container">		
                <input type="lastName" required autocomplete="off"/>
                <label for="lastName">last name</label>
              </div>

            <input type="submit" class="btn" value="Register">
            <a href="/login">
                <input type="button" class="btn" value="Cancel">
            </a>

          </div>
          
        </form>
        <br>
      </div>
    </div>
  </main>
  
<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>