<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!-- Login Form -->

<main class="container">
  <div class="offset-md-4 col-md-4 text-center">
        <!-- Message Area -->
      <% if (message && message.length > 0) { %>
        <div class="alert alert-danger">
            <%= message %>
        </div>
        <% } %>
  </div>
    <br>
    <div class="row">
      <div class="offset-md-4 col-md-4">
        <br>
        <h1>Please Login</h1>
        <br>
        <form method="POST" autocomplete="off">

          <fieldset class="form-group">
            <label for="username"> Username: </label>
            <input type="text" autocomplete="off" class="form-control" id="username" name="username" placeholder="Enter username" required autofocus>
          </fieldset>

          <fieldset class="form-group">
            <label for="password"> Password: </label>
            <input type="password" autocomplete="off" class="form-control" id="password" name="password" placeholder="Enter passsword" required>
          </fieldset>
            or
          <a href="/register"> Register Here </a>
          <br>
          <fieldset class="form-group">
            <br>
            <input type="submit" class="btn btn-dark" value="Login">
            <a href="/">
              <input type="button" class="btn btn-secondary" value="Cancel">
            </a>
          </fieldset>
        </form> 
      </div>
    </div>
  </main>
  
<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>