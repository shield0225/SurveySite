<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>
  <!--Main Navigation-->

<!-- Answer Survey Section -->
<main>
    <form method="POST" autocomplete="off">
        <div class="create-box scrollbar2" id="scrollbar1">
          <div class="text-center title-pink">
            <h3><span><%= title %></span></h3>
          </div>
                <div class="input-container1">		
                    <input type="surveyName" readonly id="surveyName" name="surveyName" value="<%= survey.surveyName %>"/>
                    <label for="surveyName">Survey Name</label>
                  </div>

                  <div class="input-container1">		
                    <input type="surveyType" readonly id="surveyType" name="surveyType" value="<%= survey.surveyType %>"/>
                    <label for="surveyType">Survey Type</label>
                  </div>
    
                <div class="input-container1">		
                  <input type="startDate" readonly id="startDate" name="startDate" value="<%= survey.startDate %>"/>
                  <label for="startDate">Start Date</label>
                </div>
    
                <div class="input-container1">		
                  <input type="endDate" readonly id="endDate" name="endDate" value="<%= survey.endDate %>"/>
                  <label for="endDate">End Date</label>
                </div>

                <br>
                <h8 class="h8">Questions</h8>
                <div class="survey-questions">
                    <div class="input-container">		
                        <input type="text" id="a1" name="a1"/>
                        <label for="questions"><%= survey.questions[0] %></label>
                    </div>
            
                    <div class="input-container">		
                        <input type="text" id="a2" name="a2" />
                        <label for="questions"><%= survey.questions[1] %></label>
                    </div>
            
                    <div class="input-container">		
                        <input type="text" id="questions" name="questions" />
                        <label for="questions"><%= survey.questions[2] %></label>
                    </div>
            
                    <div class="input-container">		
                        <input type="text" id="questions" name="questions" />
                        <label for="questions"><%= survey.questions[3] %></label>
                    </div>
            
                    <div class="input-container">		
                        <input type="text" id="questions" name="questions" />
                        <label for="questions"><%= survey.questions[4] %></label>
                    </div>
                </div>
                <div class="text-center">
                  <button class="btn submit" type="submit">Submit</button>
                  <a href="/survey/active_surveys" class="cancel btn">Cancel</a>
                </div>
              </div>
        </div>
    </form>
</main>


   <!--Script section -->
